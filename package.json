{
    "name": "massively",
    "description": "This is Massively, a text-heavy, article-oriented theme for Ghost.",
    "demo": "https://massively.ghost.io",
    "version": "1.0.2",
    "engines": {
        "ghost": ">=3.1.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "pretest": "gulp build",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Massively.git"
    },
    "bugs": "https://github.com/TryGhost/Massively/issues",
    "contributors": [
        {
            "name": "ajlkn",
            "email": "aj@lkn.io",
            "url": "https://twitter.com/ajlkn"
        },
        {
            "name": "Gwendal R",
            "email": "contact@gwendal-raballand.fr",
            "url": "https://github.com/Gwendal-R"
        }
    ],
    "devDependencies": {
        "beeper": "^1.1.1",
        "gscan": "3.3.0",
        "gulp": "4.0.0",
        "gulp-livereload": "4.0.1",
        "gulp-sass": "^4.0.2",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-watch": "5.0.1",
        "gulp-zip": "4.2.0",
        "node-sass": "^4.10.0"
    },
    "config": {
        "posts_per_page": 12
    }
}
